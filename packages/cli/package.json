    "json5": "^2.2.1",
    "tsconfig": "^7.0.0",
    "yaml": "^2.1.1"
  },
  "publishConfig": {
    "directory": "lib"
  },
  "engine": {
    "node": ">=16.0.0"
  },
  "x-wspa": {

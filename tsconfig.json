{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "incremental": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  },
  "exclude": ["**/temp/", "**/.*/", "**/lib", "**/node_modules"]
}
